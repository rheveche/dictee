{
  "version": 2,
  "builds": [
    {
      "src": "dictée/api/summarize.js",
      "use": "@vercel/node"
    },
    {
      "src": "dictée/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dictée/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "dictée/index.html"
    }
  ]
}
